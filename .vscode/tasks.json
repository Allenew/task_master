{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Backend",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/uvicorn",
			"args": [
				"backend.main:app",
				"--reload"
			],
			"isBackground": true,
			"group": "none",
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^.*Application startup complete.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Will watch for changes.*$",
					"endsPattern": "^.*Application startup complete.*$"
				}
			}
		},
		{
			"label": "Run Frontend",
			"type": "shell",
			"command": "npm run dev",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"isBackground": true,
			"group": "none",
			"problemMatcher": []
		}
	],
	"compounds": [
		{
			"label": "Run Full Stack",
			"dependsOn": [
				"Run Backend",
				"Run Frontend"
			]
		}
	]
}